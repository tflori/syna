{
    "name": "tflori/syna",
    "description": "Library for rendering native php templates",
    "require": {
        "php": "^7.1 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Syna\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "tflori/phpunit-printer": "*",
        "mockery/mockery": "^1.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Syna\\Test\\": "tests"
        }
    },
    "scripts": {
        "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=example tests"
    }
}
